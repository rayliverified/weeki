<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.texigram">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.texigram.Handlers.AppHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.texigram.Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.texigram.Activity.Login"
            android:label="Login"/>
        <activity android:name="com.texigram.Activity.Signup"
            android:label="Register"/>
        <activity
            android:name="com.texigram.Layouts.Chatbox"
            android:label="@string/title_activity_chatbox"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.texigram.Activity.Settings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.texigram.Activity.CreateGroup"
            android:label="@string/title_activity_createGroup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.texigram.Activity.AddFriend"
            android:label="@string/title_activity_addFriend"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.texigram.Activity.ViewProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.texigram.Layouts.BlockedUsers"
            android:label="@string/title_activity_blocked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.texigram.Activity.SelectDialogActivity"
            android:label="@string/title_activity_selectDialog"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.texigram.Services.PushReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.texigram.Services.GCMService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
